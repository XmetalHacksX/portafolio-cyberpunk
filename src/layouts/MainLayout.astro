---
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";
import Skills from "../components/main/Skills.astro";
import "../styles/global.css";
---

<html lang="es" class="bg-neo-background text-neo-foreground font-body relative overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Raúl | Portafolio Cyberpunk</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@700&family=Rajdhani:wght@400;700&family=Orbitron:wght@400;700&family=Libre+Barcode+128+Text&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="relative overflow-x-hidden">

    <!-- Texto glitch izquierda -->
    <aside aria-hidden="true" class="fixed top-0 left-0 h-full w-20 bg-transparent z-0 overflow-hidden">
      <div class="glitch-strip text-neo-danger font-mono text-[8px] leading-tight select-none pointer-events-none">
        <div class="glitch-loop">
          <pre>
{Array.from({ length: 60 }).map(() => (
`import Button from "../common/Button.astro";
import Card from "../common/Card.astro";
const error = "Undefined is not a function";
while(true) console.log("Cyberpunk mode...");
throw new Error("StackOverflow");
`
)).join("")}
          </pre>
          <pre>
{Array.from({ length: 60 }).map(() => (
`import Button from "../common/Button.astro";
import Card from "../common/Card.astro";
const error = "Undefined is not a function";
while(true) console.log("Cyberpunk mode...");
throw new Error("StackOverflow");
`
)).join("")}
          </pre>
        </div>
      </div>
    </aside>

    <!-- Texto glitch derecha -->
    <aside aria-hidden="true" class="fixed top-0 right-0 h-full w-20 bg-transparent z-0 overflow-hidden">
      <div class="glitch-strip text-neo-danger font-mono text-[8px] leading-tight select-none pointer-events-none">
        <div class="glitch-loop" style="animation-delay: 2s;">
          <pre>
{Array.from({ length: 60 }).map(() => (
`import Button from "../common/Button.astro";
import Card from "../common/Card.astro";
const error = "Undefined is not a function";
while(true) console.log("Cyberpunk mode...");
throw new Error("StackOverflow");
`
)).join("")}
          </pre>
          <pre>
{Array.from({ length: 60 }).map(() => (
`import Button from "../common/Button.astro";
import Card from "../common/Card.astro";
const error = "Undefined is not a function";
while(true) console.log("Cyberpunk mode...");
throw new Error("StackOverflow");
`
)).join("")}
          </pre>
        </div>
      </div>
    </aside>

    <!-- Contenido principal -->
    <div class="relative z-10 min-h-screen flex flex-col">
      <Header />
      <main class="container mx-auto px-4 py-8 flex-grow">
        <slot />
      </main>
       <Skills />
      <Footer />
    </div>

    <style>
      :root {
        --color-neo-background: #0b0d0f;
        --color-neo-foreground: #e0e0e0;
        --color-neo-accent: #4ad6ff;
        --color-neo-primary: #2a2f33;
        --color-neo-secondary: #55606e;
        --color-neo-highlight: #d0b300;
        --color-neo-danger: #ff3b3b;
      }

      /* Animación para scroll infinito vertical */
      @keyframes matrixInfiniteScroll {
        0% {
          transform: translateY(0%);
        }
        100% {
          transform: translateY(-50%);
        }
      }

      /* Animación para efecto glitch parpadeo */
      @keyframes glitchFlicker {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
          opacity: 1;
          transform: translate(0, 0);
        }
        20%, 22%, 24%, 55% {
          opacity: 0.3;
          transform: translate(-1px, 1px);
        }
        26%, 53% {
          opacity: 0.6;
          transform: translate(1px, -1px);
        }
      }

      .glitch-strip {
        height: 100%;
        overflow: hidden;
        user-select: none;
        pointer-events: none;
      }

      .glitch-loop {
        display: block;
        animation: matrixInfiniteScroll 150s linear infinite, glitchFlicker 3s linear infinite;
      }

      .glitch-strip pre {
        margin: 0;
        padding: 0;
        white-space: pre-wrap;
      }

      body {
        background-color: var(--color-neo-background);
        color: var(--color-neo-foreground);
        font-family: 'Rajdhani', sans-serif;
      }

      /* Opcional: efecto neón en textos importantes */
      h1, h2, h3 {
        text-shadow:
          0 0 5px var(--color-neo-danger),
          0 0 10px var(--color-neo-danger),
          0 0 20px var(--color-neo-danger);
      }

      /* Botones estilo cyberpunk */
      button {
        background-color: var(--color-neo-danger);
        color: var(--color-neo-background);
        padding: 0.75rem 1.5rem;
        border-radius: 0.375rem;
        box-shadow:
          0 0 10px var(--color-neo-danger),
          0 0 20px var(--color-neo-danger);
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: var(--color-neo-highlight);
        box-shadow:
          0 0 15px var(--color-neo-highlight),
          0 0 30px var(--color-neo-highlight);
      }
    </style>
  </body>
</html>
